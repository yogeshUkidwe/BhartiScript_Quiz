<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".research"
    android:background="@drawable/background_image">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/research1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"

                android:layout_marginRight="10dp"
                android:text="@string/research_documents1"
                android:textColor="@color/ActivityText4"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/pdf1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:clickable="true"
                android:onClick="research1"
                android:text="PDF Link"
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/research2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"

                android:layout_marginRight="10dp"
                android:text="@string/research_documents2"
                android:textColor="@color/ActivityText4"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/pdf2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="10dp"

                android:layout_marginTop="20dp"
                android:clickable="true"
                android:onClick="research2"
                android:text="PDF Link"
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/research3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="50dp"

                android:layout_marginRight="10dp"
                android:text="@string/research_documents3"
                android:textColor="@color/ActivityText4"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/pdf3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="10dp"

                android:layout_marginTop="20dp"
                android:clickable="true"
                android:onClick="research3"
                android:text="PDF Link"
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>