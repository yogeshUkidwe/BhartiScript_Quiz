<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sponsers"
    android:background="@drawable/background_image">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/intro_sponsers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:clickable="true"
                android:layout_gravity="center"
                android:text="Details about Sponsers"
                android:textColor="@color/ActivityText4"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/sponser1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="40dp"
                android:clickable="true"
                android:onClick="sponsers1"
                android:text="• Cholamandalam MS General Insurance Company Ltd, Chennai."
                android:textColor="@color/ActivityText4"
                android:textSize="18sp" />

        <TextView
            android:id="@+id/sponser2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:onClick="sponsers2"
            android:text="• Individual sponsors"
            android:textColor="@color/ActivityText4"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/sponsers_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:onClick="sponsers3"
            android:text="• We are looking for new sponsors. CSR sponsors are most welcome. Click here to register your interest."
            android:textColor="@color/ActivityText4"
            android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>